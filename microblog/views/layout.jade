doctype html
html
  include header
  body
    block header
      div.navbar.navbar-expand-lg.navbar-dark.bg-dark
        div.container
          a.navbar-brand(href="/") Microblog
          div.collapse.navbar-collapse
            ul.navbar-nav.mr-auto
              li.nav-item.active
                a.nav-link(href="/") 首页
              -
              if session.user
                li.nav-item
                  a.nav-link(href="/quit") 退出登录
              else
                li.nav-item
                  a.nav-link(href="/login") 登录
                li.nav-item
                  a.nav-link(href="/register") 注册
